{
    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended"
    ],
    "globals": {
        "$": true,
        "require": false,
        "process": true,
        "Prism": true
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "vue/html-indent": [
            "error",
            4,
            {
                "attribute": 1,
                "closeBracket": 1,
                "alignAttributesVertically": false,
                "ignores": []
            }
        ],
        "vue/max-attributes-per-line": [
            2,
            {
                "singleline": {
                    "max": 2
                },
                "multiline": {
                    "max": 1,
                    "allowFirstLine": true
                }
            }
        ],
        "vue/html-self-closing": [
            "error",
            {
                "html": {
                    "void": "always",
                    "normal": "never",
                    "component": "never"
                },
                "svg": "never",
                "math": "never"
            }
        ],
        "vue/script-indent": [
            "error",
            4,
            {
                "baseIndent": 1,
                "switchCase": 1,
                "ignores": []
            }
        ],
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "array-bracket-spacing": [
            "error",
            "always",
            {
                "singleValue": true,
                "objectsInArrays": true,
                "arraysInArrays": true
            }
        ],
        "object-curly-spacing": [
            "error",
            "always",
            {
                "objectsInObjects": true,
                "arraysInObjects": true
            }
        ],
        "space-in-parens": [
            "error",
            "always"
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "vue/order-in-components": ["error", {
            "order": [
                "el",
                "name",
                "parent",
                "functional",
                ["delimiters", "comments"],
                ["components", "directives"],
                "extends",
                "mixins",
                "inheritAttrs",
                "model",
                ["props", "propsData"],
                "data",
                "filters",
                "computed",
                "watch",
                "methods",
                ["template", "render"],
                "renderError",
                "LIFECYCLE_HOOKS"
            ]
        }]
    },
    "overrides": [
        {
            "files": ["*.vue"],
            "rules": {
                "indent": "off"
            }
        },
        {
            "files": ["*.js"],
            "rules": {
                "vue/script-indent": "off"
            }
        }
    ],
    "plugins": [
        "vue"
    ],
    "parserOptions": {
        "ecmaVersion": 2017,
        "parser": "babel-eslint",
        "allowImportExportEverywhere": true
    }
}